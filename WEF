			fi

			if [ "$correct_counter" != "3" ]; then
				for word in "${words[@]}"; do
					if [ "$option" == "$word" ]; then
						correct_counter="2"
					fi
				done
			fi

			if [ "$option" == "WEF" ] || [ "$option" == "wef" ] || [ "$option" == "99" ] || [ "$option" == "secret" ]; then
				correct_counter="3"
			        secret
			fi

			if [ "$option" == "help" ] || [ "$option" == "?" ] || [ "$option" == "Help" ]; then
				correct_counter="3"
				listHelp
			fi

			if [ "$option" == "clear" ] || [ "$option" == "cls" ]; then
