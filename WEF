				sleep 0.15
				mon_check=$(iwconfig ${netCard} | grep 'Mode' | awk '{print $4}' | awk '{print $2}' FS=':')
                                type_of_attack="Authentication Attack"
				if [ "$mon_check" == "Monitor" ]; then
					sleep 0.15
					auth_attack
